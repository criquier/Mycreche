<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="120dp" >

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Email" />

        <EditText
            android:id="@+id/editTextTitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextEmail"
            android:layout_below="@+id/editTextEmail"
            android:layout_marginTop="14dp"
            android:ems="10"
            android:hint="Titre" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextTitre"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/editTextTitre"
            android:layout_marginTop="19dp"
            android:ems="10"
            android:hint="Message"
            android:inputType="textMultiLine" />

    </RelativeLayout>

    <Button
        android:id="@+id/annulerRechercheAvance"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/envoie"
        android:layout_alignBottom="@+id/envoie"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_marginLeft="20dp"
        android:text="@string/annulerLabel" />

    <Button
        android:id="@+id/envoie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/relativeLayout1"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="14dp"
        android:text="@string/bouton_envoyer" />

</RelativeLayout>