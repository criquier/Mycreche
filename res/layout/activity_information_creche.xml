<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond" >

    <ImageView
        android:id="@+id/imageView1"
        android:src="@drawable/logo"
        android:contentDescription="@string/app_name"
        style="@style/logo" />

    <Button
        android:id="@+id/annulerDetailCreche"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="34dp"
        style="@style/buttonAnnuler"/>
    
    <Button
        android:id="@+id/valider" 
        android:layout_alignBottom="@+id/annulerDetailCreche"
        android:layout_alignRight="@+id/imageView1"
        android:text="@string/visualiserCreche"
        style="@style/buttonAction" />

    <RelativeLayout
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="18dp"
        style="@style/blockContent" >

        <TextView
            android:id="@+id/descriptionCreche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/telephone"
            style="@style/buttonTel"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp" />

        <Button
            android:id="@+id/emailCreche"
            style="@style/buttonMail"
            android:layout_alignParentTop="true"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/telephone" />

        <TextView
            android:id="@+id/nomCreche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/emailCreche"
            android:layout_alignBottom="@+id/emailCreche"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/descriptionCreche"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/adresseCreche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/nomCreche"
            android:layout_below="@+id/emailCreche"
            android:layout_marginLeft="16dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/distanceCreche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/descriptionCreche"
            android:layout_alignBottom="@+id/descriptionCreche"
            android:layout_alignRight="@+id/telephone"
            android:text="TextView" />

    </RelativeLayout>

</RelativeLayout>
